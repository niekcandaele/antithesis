{
  "name": "antithesis",
  "version": "1.0.0",
  "type": "module",
  "description": "Modern Node.js + TypeScript project",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:css": "postcss src/styles/main.css -o public/css/main.css --verbose",
    "start": "node dist/index.js",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "tsx --test 'src/**/!(*.integration).test.ts'",
    "test:integration": "tsx --test 'src/**/*.integration.test.ts'",
    "test:e2e": "playwright test",
    "test:watch": "tsx --test --watch 'src/**/*.test.ts'",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "migrate": "node -e \"require('fs').existsSync('dist') ? require('child_process').execSync('node dist/lib/db/migrate-cli.js', {stdio:'inherit'}) : require('child_process').execSync('tsx src/lib/db/migrate-cli.ts', {stdio:'inherit'})\"",
    "db:codegen": "kysely-codegen --dialect postgres --out-file src/lib/db/types.ts --url postgresql://${DB_USER:-antithesis}:${DB_PASSWORD:-antithesis}@${DB_HOST:-localhost}:${DB_PORT:-5432}/${DB_NAME:-antithesis}"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.4",
    "@types/pg": "^8.15.5",
    "@types/triple-beam": "^1.3.5",
    "autoprefixer": "^10.4.21",
    "body-parser": "^2.2.0",
    "connect-redis": "^9.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "daisyui": "^4.12.24",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "kysely": "^0.28.7",
    "kysely-codegen": "^0.19.0",
    "logform": "^2.7.0",
    "openid-client": "^6.8.1",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "rapidoc": "^9.3.8",
    "redis": "^5.8.2",
    "tailwindcss": "^3.4.18",
    "winston": "^3.18.3",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@playwright/test": "^1.55.1",
    "@testcontainers/postgresql": "^11.7.0",
    "@testcontainers/redis": "^11.7.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/connect-redis": "^0.0.23",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/node": "^22.9.0",
    "@types/supertest": "^6.0.3",
    "better-sqlite3": "^12.4.1",
    "docker-compose": "^1.0.0",
    "eslint": "^9.15.0",
    "postcss-cli": "^11.0.1",
    "prettier": "^3.3.3",
    "supertest": "^7.1.4",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.14.0",
    "zx": "^8.3.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
