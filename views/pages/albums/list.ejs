<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Antithesis</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('../../partials/header') %>

  <main class="container mx-auto px-4 py-8">
    <div class="space-y-6">
      <!-- Page Header -->
      <div class="flex justify-between items-center">
        <h1 class="text-3xl font-bold"><%= title %></h1>
        <div class="flex gap-2">
          <a href="/albums/new" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Create Album
          </a>
        </div>
      </div>

      <!-- Filters -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <form method="GET" action="/albums" class="flex gap-4 items-end">
            <div class="form-control">
              <label class="label">
                <span class="label-text">Status</span>
              </label>
              <select name="status" class="select select-bordered w-full max-w-xs">
                <option value="">All</option>
                <option value="draft" <%= filters.status === 'draft' ? 'selected' : '' %>>Draft</option>
                <option value="published" <%= filters.status === 'published' ? 'selected' : '' %>>Published</option>
                <option value="archived" <%= filters.status === 'archived' ? 'selected' : '' %>>Archived</option>
              </select>
            </div>

            <div class="form-control">
              <label class="label cursor-pointer gap-2">
                <span class="label-text">Include Deleted</span>
                <input type="checkbox" name="includeDeleted" value="true" class="checkbox" <%= filters.includeDeleted ? 'checked' : '' %> />
              </label>
            </div>

            <button type="submit" class="btn btn-secondary">Filter</button>
            <a href="/albums" class="btn btn-ghost">Reset</a>
          </form>
        </div>
      </div>

      <!-- Albums Grid -->
      <% if (albums.length === 0) { %>
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body text-center">
            <p class="text-lg">No albums found. Create your first album to get started!</p>
            <div class="card-actions justify-center">
              <a href="/albums/new" class="btn btn-primary">Create Album</a>
            </div>
          </div>
        </div>
      <% } else { %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% albums.forEach(function(album) { %>
            <div class="card bg-base-100 shadow-xl <%= album.isDeleted ? 'opacity-50' : '' %>">
              <% if (album.coverPhotoUrl) { %>
                <figure><img src="<%= album.coverPhotoUrl %>" alt="<%= album.name %>" class="h-48 w-full object-cover" /></figure>
              <% } else { %>
                <figure class="bg-base-300 h-48 flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-base-content opacity-20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </figure>
              <% } %>
              <div class="card-body">
                <h2 class="card-title">
                  <%= album.name %>
                  <div class="badge badge-<%= album.status === 'published' ? 'success' : album.status === 'draft' ? 'warning' : 'info' %>">
                    <%= album.status %>
                  </div>
                  <% if (album.isDeleted) { %>
                    <div class="badge badge-error">Deleted</div>
                  <% } %>
                </h2>
                <% if (album.description) { %>
                  <p class="text-sm opacity-70"><%= album.description.substring(0, 100) %><%= album.description.length > 100 ? '...' : '' %></p>
                <% } %>
                <div class="card-actions justify-end mt-4">
                  <a href="/albums/<%= album.id %>" class="btn btn-sm btn-primary">View</a>
                  <% if (!album.isDeleted) { %>
                    <a href="/albums/<%= album.id %>/edit" class="btn btn-sm btn-ghost">Edit</a>
                  <% } %>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      <% } %>
    </div>
  </main>

  <%- include('../../partials/footer') %>
</body>
</html>
