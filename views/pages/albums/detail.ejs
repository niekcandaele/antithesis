<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Antithesis</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('../../partials/header') %>

  <main class="container mx-auto px-4 py-8">
    <div class="space-y-6">
      <!-- Breadcrumbs -->
      <div class="text-sm breadcrumbs">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/albums">Albums</a></li>
          <li><%= album.name %></li>
        </ul>
      </div>

      <!-- Album Header -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <div class="flex justify-between items-start">
            <div class="flex-1">
              <h1 class="text-3xl font-bold mb-2">
                <%= album.name %>
                <div class="badge badge-<%= album.status === 'published' ? 'success' : album.status === 'draft' ? 'warning' : 'info' %> ml-2">
                  <%= album.status %>
                </div>
                <% if (album.isDeleted) { %>
                  <div class="badge badge-error ml-2">Deleted</div>
                <% } %>
              </h1>
              <% if (album.description) { %>
                <p class="text-base opacity-70"><%= album.description %></p>
              <% } %>
              <div class="text-sm opacity-50 mt-2">
                <% if (album.creatorEmail) { %>
                  Created by <%= album.creatorEmail %> on <%= new Date(album.createdAt).toLocaleDateString() %>
                <% } else { %>
                  Created <%= new Date(album.createdAt).toLocaleDateString() %>
                <% } %>
              </div>
            </div>
            <div class="flex gap-2">
              <% if (!album.isDeleted) { %>
                <a href="/photos/new?albumId=<%= album.id %>" class="btn btn-primary">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                  </svg>
                  Add Photo
                </a>
                <a href="/albums/<%= album.id %>/edit" class="btn btn-secondary">Edit Album</a>
                <form method="POST" action="/albums/<%= album.id %>/delete" onsubmit="return confirm('Are you sure you want to delete this album?');" style="display: inline;">
                  <button type="submit" class="btn btn-error">Delete</button>
                </form>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <!-- Photos Grid -->
      <div class="space-y-4">
        <h2 class="text-2xl font-bold">Photos (<%= photos.length %>)</h2>

        <% if (photos.length === 0) { %>
          <div class="card bg-base-100 shadow-xl">
            <div class="card-body text-center">
              <p class="text-lg">No photos in this album yet.</p>
              <% if (!album.isDeleted) { %>
                <div class="card-actions justify-center">
                  <a href="/photos/new?albumId=<%= album.id %>" class="btn btn-primary">Add First Photo</a>
                </div>
              <% } %>
            </div>
          </div>
        <% } else { %>
          <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            <% photos.forEach(function(photo) { %>
              <div class="card bg-base-100 shadow-xl <%= photo.isDeleted ? 'opacity-50' : '' %>">
                <figure class="relative group">
                  <% if (photo.thumbnailUrl || photo.url) { %>
                    <img src="<%= photo.thumbnailUrl || photo.url %>" alt="<%= photo.title %>" class="h-48 w-full object-cover" />
                  <% } else { %>
                    <div class="bg-base-300 h-48 flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 text-base-content opacity-20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                    </div>
                  <% } %>
                  <div class="absolute top-2 right-2">
                    <div class="badge badge-<%= photo.status === 'published' ? 'success' : photo.status === 'draft' ? 'warning' : 'info' %>">
                      <%= photo.status %>
                    </div>
                  </div>
                </figure>
                <div class="card-body p-4">
                  <h3 class="card-title text-sm">
                    <%= photo.title %>
                    <% if (photo.isDeleted) { %>
                      <div class="badge badge-error badge-sm">Deleted</div>
                    <% } %>
                  </h3>
                  <% if (photo.description) { %>
                    <p class="text-xs opacity-70"><%= photo.description.substring(0, 60) %><%= photo.description.length > 60 ? '...' : '' %></p>
                  <% } %>
                  <div class="card-actions justify-end mt-2">
                    <% if (photo.url) { %>
                      <a href="<%= photo.url %>" target="_blank" class="btn btn-xs btn-ghost">View</a>
                    <% } %>
                    <% if (!photo.isDeleted) { %>
                      <a href="/photos/<%= photo.id %>/edit" class="btn btn-xs btn-primary">Edit</a>
                      <form method="POST" action="/photos/<%= photo.id %>/delete" onsubmit="return confirm('Delete this photo?');" style="display: inline;">
                        <button type="submit" class="btn btn-xs btn-error">Delete</button>
                      </form>
                    <% } %>
                  </div>
                </div>
              </div>
            <% }); %>
          </div>
        <% } %>
      </div>
    </div>
  </main>

  <%- include('../../partials/footer') %>
</body>
</html>
